---
import HeaderNavLink from './HeaderNavLink.astro';
import siteConfig from '../data/site-config';
import CustomImage from './CustomImage.astro';
import SocialLink from './SocialLink.astro';

const primaryNavLinks = siteConfig.primaryNavLinks ?? [];

const { class: className } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '') || '/';
---

<div class="fixed top-0 left-0 w-full flex justify-between z-50 pt-6 px-4 sm:px-8 pointer-events-none">
    <header class:list={['pointer-events-auto flex w-full max-w-7xl mx-auto items-center justify-between gap-3 sm:gap-8 px-4 sm:px-6 py-3 bg-white/70 backdrop-blur-xl shadow-lg shadow-slate-200/50 border border-white/50 rounded-full transition-all duration-300 hover:bg-white/95 hover:shadow-xl', className]}>
        {
            siteConfig.logo?.src ? (
                <a href={base}>
                    <CustomImage class="max-h-12" {...siteConfig.logo} loading="eager" fetchpriority="high" />
                </a>
            ) : (
                <a class="text-[10px] sm:text-xs font-bold text-slate-900 tracking-wide truncate max-w-[130px] sm:max-w-none shrink-0" href={base} title={siteConfig.title}>
                    {siteConfig.title}
                </a>
            )
        }
        {
            primaryNavLinks.length > 0 && (
                <div class="flex items-center justify-end gap-2 sm:gap-8 flex-1 min-w-0">
                    {/* Desktop Navigation */}
                    <div class="hidden sm:flex items-center justify-end gap-2 sm:gap-8 flex-1 min-w-0">
                        <!-- Inline Navigation Menu -->
                        <nav class="flex items-center gap-1 sm:gap-2 overflow-x-auto flex-nowrap no-scrollbar min-w-0" aria-label="Desktop navigation">
                            {primaryNavLinks.filter(link => link.text !== 'Contact').map((link) => (
                                <HeaderNavLink
                                    class="whitespace-nowrap shrink-0 px-3 sm:px-4 py-2 text-sm font-bold tracking-wide transition-all duration-300 text-slate-600 rounded-full hover:bg-slate-100/80 hover:text-slate-900 hover:scale-105"
                                    href={link.href}
                                >
                                    {link.text}
                                </HeaderNavLink>
                            ))}
                        </nav>
                            
                        {/* Contact Expanding Snackbar */}
                        <div class="group relative flex items-center shrink-0">
                            <button
                                class="whitespace-nowrap px-3 sm:px-4 py-2 text-sm font-bold tracking-wide transition-all duration-300 text-slate-600 rounded-full hover:bg-slate-100/80 hover:text-slate-900 group-hover:scale-105 peer z-10"
                            >
                                    Contact
                            </button>
                            <div class="absolute right-0 top-1/2 -translate-y-1/2 flex items-center pr-2 translate-x-4 opacity-0 scale-95 pointer-events-none group-hover:opacity-100 group-hover:translate-x-full group-hover:scale-100 group-hover:pointer-events-auto transition-all duration-300 origin-left">
                                <div class="flex items-center gap-2 bg-white shadow-xl shadow-slate-200/50 border border-slate-100 px-3 py-1.5 rounded-full backdrop-blur-md">
                                    {siteConfig.socialLinks?.map((link) => (
                                        <SocialLink 
                                            {...link} 
                                            class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-50 text-slate-600 hover:bg-[var(--color-primary)] hover:text-white transition-all duration-300 hover:-translate-y-1" 
                                        />
                                    ))}
                                </div>
                            </div>
                        </div>
                        <!-- Language Toggle -->
                        <div class="flex items-center gap-2 sm:gap-3 text-sm font-medium text-slate-700 sm:text-base border-l border-slate-300 pl-2 sm:pl-6 h-6 shrink-0">
                            <button class="px-1 sm:px-2 py-1 rounded-md hover:bg-slate-100 transition-colors font-bold text-[var(--color-primary)]">KR</button>
                            <span class="text-slate-300">|</span>
                            <button class="px-2 py-1 rounded-md hover:bg-slate-100 transition-colors text-slate-500">EN</button>
                        </div>
                    </div>

                    {/* Mobile Navigation Toggle */}
                    <button
                        id="mobile-menu-toggle"
                        class="sm:hidden flex items-center justify-center p-2 -mr-2 rounded-md text-slate-600 hover:text-slate-900 hover:bg-slate-100 transition-colors z-50 focus:outline-none"
                        aria-label="Toggle Menu"
                        aria-expanded="false"
                    >
                        <svg class="w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                        <svg class="w-6 h-6 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            )
        }
    </header>

    {/* Mobile Menu Overlay */}
    <div id="mobile-menu" class="pointer-events-auto fixed inset-0 z-40 bg-white/95 backdrop-blur-xl translate-x-full transition-transform duration-300 ease-in-out sm:hidden flex flex-col pt-24 px-6 pb-8">
        <nav class="flex flex-col gap-4 text-center mt-4 flex-1">
            {primaryNavLinks.filter(link => link.text !== 'Contact').map((link) => (
                <a
                    href={link.href}
                    class="text-2xl font-extrabold text-slate-800 hover:text-[var(--color-primary)] transition-colors py-2 mobile-nav-link"
                >
                    {link.text}
                </a>
            ))}
        </nav>

        <div class="flex flex-col items-center gap-6 mt-auto">
            {/* Mobile Language Toggle */}
            <div class="flex items-center justify-center gap-4 text-lg font-bold">
                <button class="text-[var(--color-primary)]">KR</button>
                <span class="text-slate-300">|</span>
                <button class="text-slate-500 hover:text-[var(--color-primary)] transition-colors">EN</button>
            </div>
            
            {/* Mobile Social Links */}
            <div class="flex items-center justify-center gap-4 pt-6 border-t border-slate-200 w-full">
                {siteConfig.socialLinks?.map((link) => (
                    <SocialLink 
                        {...link} 
                        class="w-12 h-12 flex items-center justify-center rounded-full bg-slate-100 text-slate-700 hover:bg-[var(--color-primary)] hover:text-white transition-all shadow-sm" 
                    />
                ))}
            </div>
        </div>
    </div>
</div>

<style>
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    #mobile-menu-toggle[aria-expanded="true"] .menu-icon {
        display: none;
    }
    #mobile-menu-toggle[aria-expanded="true"] .close-icon {
        display: block;
    }
    #mobile-menu.open {
        transform: translateX(0);
    }
</style>

<script>
    const setupMobileMenu = () => {
        const toggleBtn = document.getElementById('mobile-menu-toggle');
        const menu = document.getElementById('mobile-menu');
        const links = document.querySelectorAll('.mobile-nav-link');

        if (!toggleBtn || !menu) return;

        const toggleMenu = () => {
            const isExpanded = toggleBtn.getAttribute('aria-expanded') === 'true';
            toggleBtn.setAttribute('aria-expanded', (!isExpanded).toString());
            menu.classList.toggle('open');
            
            // Prevent body scroll when menu is open
            document.body.style.overflow = !isExpanded ? 'hidden' : '';
        };

        toggleBtn.addEventListener('click', toggleMenu);

        // Close menu when a link is clicked
        links.forEach(link => {
            link.addEventListener('click', () => {
                toggleBtn.setAttribute('aria-expanded', 'false');
                menu.classList.remove('open');
                document.body.style.overflow = '';
            });
        });
    };

    // Run on initial load
    setupMobileMenu();

    // Re-run setup after Astro view transitions
    document.addEventListener('astro:page-load', setupMobileMenu);
</script>
